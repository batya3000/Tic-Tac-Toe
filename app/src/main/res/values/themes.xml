<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicTacToe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- Customize your theme here. -->


        <item name="ticTaToeFieldStyle">@style/GlobalTicTacToeFieldStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="dialogCornerRadius">12dp</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="DefaultTicTacToeFieldStyle">
        <item name="gridColor">#DFDFDF</item>
    </style>

    <style name="GlobalTicTacToeFieldStyle">
        <item name="gridColor">#DFDFDF</item>
    </style>

    <style name="Text.MenuTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_bold_linear</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="Text.PageTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_semibold_linear</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="Text.Button" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_semibold_linear</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Subtitle1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_semibold_linear</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Subtitle2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_semibold_linear</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Caption" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_medium_linear</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="Text.CaptionBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_bold_linear</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text.CaptionSemibold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_semibold_linear</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>


    <style name="CardView.Primary" parent="Widget.MaterialComponents.CardView">
<!--        <item name="cardBackgroundColor">@drawable/gradient_primary</item>-->
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
    <style name="CardView.White" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="CardView.Secondary" parent="Widget.MaterialComponents.CardView">
<!--        <item name="backgroundTint">@drawable/gradient_yellow</item>-->
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/radio_selector</item>
        <item name="android:textColor">@drawable/radio_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/Text.CaptionSemibold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        
    </style>

    <style name="ProgressBarTurnStyle" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackColor">#333968DF</item>
        <item name="indicatorColor">@color/primary2</item>
        <item name="trackCornerRadius">2dp</item>
    </style>

    <style name="ProgressBarInvitationStyle" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackColor">#33F06C4F</item>
        <item name="indicatorColor">@color/secondary</item>
        <item name="trackCornerRadius">2dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

</resources>